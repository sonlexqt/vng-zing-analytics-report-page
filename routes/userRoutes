var express = require('express');
var router = express.Router();
var mySqlConnection = require('../mysql-connection');
var moment = require('moment');

router.get('/profile', function(req, res, next) {
    if (req.session && req.session.userInfo){
        res.send(req.session.userInfo);
    } else {
        res.render("error");
    }
});

router.get('/list', function(req, res, next) {
    if (req.session && req.session.userInfo && req.session.userInfo.role && req.session.userInfo.role == "admin"){
        mySqlConnection.query("select id, username, password, psalt, role, rsalt, status, registeredAt from user",
            function(err, rows, fields) {
                if (err) throw err;
                if (rows && rows.length){
                    res.send(rows);
                }
                else {
                    res.send("No query result.");
                }
            }
        );
    } else {
        res.render("error");
    }
});

//TODO

module.exports = router;